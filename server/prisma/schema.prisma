generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  email     String      @id @db.Char(50)
  group_id  Int?
  nickname  String?     @db.Char(20)
  password  String      @db.Char(100)
  FEED      Feed[]
  HIGHLIGHT Highlight[]
  GROUP     Group?      @relation(fields: [group_id], references: [id])

  @@index([group_id], map: "USER_group_id_fkey")
  @@map("USER")
}

model Group {
  id   Int    @id @default(autoincrement())
  name String @db.Char(20)
  FEED Feed[]
  USER User[]

  @@map("GROUP")
}

model Feed {
  createdAt  DateTime    @default(now())
  group_id   Int
  id         Int         @id @default(autoincrement())
  updatedAt  DateTime    @default(now())
  url        String      @db.Char(100)
  user_email String
  GROUP      Group       @relation(fields: [group_id], references: [id])
  USER       User        @relation(fields: [user_email], references: [email])
  HIGHLIGHT  Highlight[]

  @@index([group_id], map: "FEED_group_id_fkey")
  @@index([user_email], map: "FEED_user_email_fkey")
  @@map("FEED")
}

model Highlight {
  createdAt  DateTime @default(now())
  feed_id    Int
  id         Int      @id @default(autoincrement())
  selection  Json
  user_email String
  FEED       Feed     @relation(fields: [feed_id], references: [id])
  USER       User     @relation(fields: [user_email], references: [email])

  @@index([feed_id], map: "HIGHLIGHT_feed_id_fkey")
  @@index([user_email], map: "HIGHLIGHT_user_email_fkey")
  @@map("HIGHLIGHT")
}

model TestFeed {
  id        Int      @id @default(autoincrement())
  url       String
  content   String?
  group     String
  createdAt DateTime @default(now())
}
