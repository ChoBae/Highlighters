// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//User
model User {
  user_id  Int     @id @default(autoincrement()) @map("USER_ID")
  email    String  @unique @map("EMAIL") @db.Char(20)
  password String  @map("PASSWORD") @db.Char(100)
  nickname String? @map("NICKNAME") @db.Char(20)

  owner_Group Group? @relation("Owner")

  @@map("USER")
}

// Group
model Group {
  group_id Int    @id @default(autoincrement()) @map("GROUP_ID")
  name     String @map("NAME") @db.Char(20)
  owner_id Int    @unique @map("OWNER_ID")

  owner User @relation("Owner", fields: [owner_id], references: [user_id])

  @@map("GROUP")
}

model TestFeed {
  id        Int      @id @default(autoincrement())
  url       String
  content   String?
  group     String
  createdAt DateTime @default(now())
}
